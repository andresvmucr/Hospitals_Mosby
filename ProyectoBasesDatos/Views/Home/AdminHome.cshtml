@{
    ViewData["Title"] = "Panel de Administración";
}

<div class="container-fluid py-5 px-4">
    <div class="text-center mb-5 p-5 rounded-lg header-banner">
        <h1 class="display-4 fw-bold text-white mb-3">Panel de Control</h1>
        <p class="lead text-white opacity-90">Sistema de Gestión Médica Integral</p>
    </div>

    <h2 class="fw-bold mb-4 ps-2 border-start border-4 border-primary">Gestión del Sistema</h2>

    <div class="row g-4">
        <!-- Tarjeta de Citas -->
        <div class="col-lg-4 col-md-6">
            <div class="admin-card admin-info h-100">
                <div class="card-icon">
                    <i class="bi bi-calendar-date-fill"></i>
                </div>
                <div class="card-body text-center p-4">
                    <h5 class="card-title fw-bold mb-3">Citas</h5>
                    <p class="card-text">Programación y seguimiento de citas médicas y consultas.</p>
                    <a asp-controller="Appointments" asp-action="Index" class="btn btn-light rounded-pill px-4 mt-3">
                        <i class="bi bi-calendar-check-fill me-2"></i>Administrar
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="admin-card admin-warning h-100">
                <div class="card-icon">
                    <i class="bi bi-person-badge-fill"></i>
                </div>
                <div class="card-body text-center p-4">
                    <h5 class="card-title fw-bold mb-3">Doctores</h5>
                    <p class="card-text">Administración de médicos, especialidades y horarios laborales.</p>
                    <a asp-controller="Users" asp-action="Doctors" class="btn btn-light rounded-pill px-4 mt-3">
                        <i class="bi bi-clipboard2-pulse-fill me-2"></i>Administrar
                    </a>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Medicamentos -->
        <div class="col-lg-4 col-md-6">
            <div class="admin-card admin-danger h-100">
                <div class="card-icon">
                    <i class="bi bi-capsule"></i>
                </div>
                <div class="card-body text-center p-4">
                    <h5 class="card-title fw-bold mb-3">Medicamentos</h5>
                    <p class="card-text">Gestión de inventario y catálogo de medicamentos disponibles.</p>
                    <a href="@Url.Action("Index", "Medications")" class="btn btn-light rounded-pill px-4 mt-3">
                        <i class="bi bi-journal-medical me-2"></i>Administrar
                    </a>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Pacientes -->
        <div class="col-lg-4 col-md-6">
            <div class="admin-card admin-success h-100">
                <div class="card-icon">
                    <i class="bi bi-people-fill"></i>
                </div>
                <div class="card-body text-center p-4">
                    <h5 class="card-title fw-bold mb-3">Pacientes</h5>
                    <p class="card-text">Gestión de pacientes y datos personales.</p>
                    <a asp-controller="Users" asp-action="Patients" class="btn btn-light rounded-pill px-4 mt-3">
                        <i class="bi bi-person-vcard-fill me-2"></i>Administrar
                    </a>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Tratamientos -->
        <div class="col-lg-4 col-md-6">
            <div class="admin-card admin-dark h-100">
                <div class="card-icon">
                    <i class="bi bi-clipboard2-pulse"></i>
                </div>
                <div class="card-body text-center p-4">
                    <h5 class="card-title fw-bold mb-3">Tratamientos</h5>
                    <p class="card-text">Configuración y seguimiento de planes de tratamiento para pacientes.</p>
                    <a href="@Url.Action("Index", "Treatments")" class="btn btn-light rounded-pill px-4 mt-3">
                        <i class="bi bi-heart-pulse-fill me-2"></i>Administrar
                    </a>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Consultas Avanzadas -->
        <div class="col-lg-4 col-md-6">
            <div class="admin-card admin-dark h-100">
                <div class="card-icon">
                    <i class="bi bi-clipboard2-pulse"></i>
                </div>
                <div class="card-body text-center p-4">
                    <h5 class="card-title fw-bold mb-3">Consultas avanzadas</h5>
                    <p class="card-text">Acceso a consultas personalizadas y reportes avanzados del sistema.</p>
                    <a asp-controller="Admins" asp-action="AdvancedQueriesHome" class="btn btn-light rounded-pill px-4 mt-3">
                        <i class="bi bi-heart-pulse-fill me-2"></i>Administrar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .header-banner {
        background: linear-gradient(135deg, #4158D0, #C850C0, #FFCC70);
        background-size: 300% 300%;
        animation: gradient-animation 8s ease infinite;
        box-shadow: 0 10px 20px rgba(0,0,0,0.12);
    }

    @@keyframes gradient-animation {
        0%

    {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    100% {
        background-position: 0% 50%;
    }

    }

    .stats-card {
        background-color: white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
    }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }

    .stats-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .admin-card {
        border-radius: 16px;
        overflow: hidden;
        position: relative;
        color: white;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 10px 25px rgba(0,0,0,0.13);
        margin-bottom: 20px;
    }

        .admin-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 15px 35px rgba(0,0,0,0.18);
        }

        .admin-card .card-icon {
            position: absolute;
            right: 20px;
            top: 20px;
            font-size: 3.5rem;
            opacity: 0.15;
            transform: rotate(-10deg);
            transition: all 0.4s ease;
        }

        .admin-card:hover .card-icon {
            transform: rotate(0deg) scale(1.2);
            opacity: 0.25;
        }

    .admin-primary {
        background: linear-gradient(45deg, #4361ee, #3f37c9);
    }

    .admin-success {
        background: linear-gradient(45deg, #4caf50, #2e7d32);
    }

    .admin-info {
        background: linear-gradient(45deg, #03a9f4, #0277bd);
    }

    .admin-warning {
        background: linear-gradient(45deg, #ff9800, #ef6c00);
    }

    .admin-danger {
        background: linear-gradient(45deg, #f44336, #c62828);
    }

    .admin-dark {
        background: linear-gradient(45deg, #455a64, #263238);
    }

    .admin-card .btn {
        transition: all 0.3s ease;
        font-weight: 500;
    }

        .admin-card .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
</style>