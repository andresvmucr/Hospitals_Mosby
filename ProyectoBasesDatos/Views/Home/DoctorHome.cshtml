@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Citas";
}


<div class="container">
    <h2>Citas Programadas</h2>


    <table class="table table-striped">
        <thead>
            <tr>
                <th>Fecha </th>
                <th>Hora </th>
                <th>Paciente</th>
                <th>Estado </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.ADay</td>
                    <td>@appointment.AHour.ToString("HH:mm")</td>
                    <td>@appointment.Patient.UName  @appointment.Patient.Firstlastname  @appointment.Patient.Secondlastname </td>
                    <td>Pendiente</td>
                    <td>
                        <!-- Botón o enlace para Detalles -->
                        <a class="btn btn-info btn-sm" asp-controller="Appointments" asp-action="Details" asp-route-id="@appointment.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8a13.133 13.133 0 0 1-1.66 2.043C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13.133 13.133 0 0 1 1.172 8z" />
                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                            </svg>
                            Detalles
                        </a>

                        <!-- Botón o enlace para Atender -->
                        <a class="btn btn-success btn-sm" asp-controller="Appointments" asp-action="Perform" asp-route-id="@appointment.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
                            </svg>
                            Atender
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>