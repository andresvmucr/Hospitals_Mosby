@{
    ViewData["Title"] = "Inicio de Sesión";
}

<div class="container-fluid py-5 px-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="login-card">
                <div class="card-icon">
                    <i class="bi bi-person-circle"></i>
                </div>
                <div class="card-body p-5">
                    <h2 class="fw-bold mb-4 text-center">Inicio de Sesión</h2>

                    <form asp-action="Login" method="post">
                        <div class="form-group mb-4">
                            <label for="id" class="form-label fw-medium">Cédula:</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                <input type="text" class="form-control py-2" id="id" name="id" placeholder="Ingrese su número de cédula" required>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label for="password" class="form-label fw-medium">Contraseña:</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-key"></i></span>
                                <input type="password" class="form-control py-2" id="password" name="password" placeholder="Ingrese su contraseña" required>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 rounded-pill">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos para el encabezado con gradiente */
    .header-banner {
        background: linear-gradient(135deg, #4158D0, #C850C0, #FFCC70);
        background-size: 300% 300%;
        animation: gradient-animation 8s ease infinite;
        box-shadow: 0 10px 20px rgba(0,0,0,0.12);
    }

    @@keyframes gradient-animation {
        0%

    {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    100% {
        background-position: 0% 50%;
    }

    }

    /* Estilos para la tarjeta de login */
    .login-card {
        border-radius: 16px;
        overflow: hidden;
        position: relative;
        background: white;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 10px 25px rgba(0,0,0,0.13);
    }

        .login-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.18);
        }

        .login-card .card-icon {
            position: absolute;
            right: 20px;
            top: 20px;
            font-size: 3.5rem;
            color: #4158D0;
            opacity: 0.15;
            transform: rotate(-10deg);
            transition: all 0.4s ease;
        }

        .login-card:hover .card-icon {
            transform: rotate(0deg) scale(1.2);
            opacity: 0.25;
        }

    /* Estilos para los inputs */
    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(65, 88, 208, 0.25);
        border-color: #4158D0;
    }

    /* Estilos para el botón */
    .btn-primary {
        background: linear-gradient(45deg, #4158D0, #C850C0);
        border: none;
        transition: all 0.3s ease;
        font-weight: 500;
    }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            background: linear-gradient(45deg, #3a4ebf, #b747ad);
        }
</style>