@model ProyectoBasesDatos.Models.Treatment
@{
    ViewData["Title"] = "Detalles del Tratamiento";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="my-2"><i class="fas fa-clipboard-list me-2"></i>Detalles del Tratamiento</h4>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-lg-8">
                    <h5 class="mb-3 text-primary"><i class="fas fa-info-circle me-2"></i>Información del Tratamiento</h5>

                    <div class="mb-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-muted mb-2">
                                        <i class="fas fa-dollar-sign me-2"></i>@Html.DisplayNameFor(model => model.Price)
                                    </h6>
                                    <p class="fs-5 mb-0">@Html.DisplayFor(model => model.Price)</p>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="text-muted mb-2">
                                        <i class="fas fa-calendar-check me-2"></i>@Html.DisplayNameFor(model => model.Appointment)
                                    </h6>
                                    <p class="fs-5 mb-0">@Html.DisplayFor(model => model.Appointment.Id)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Aquí se pueden agregar más datos del tratamiento si están disponibles -->

                    <div class="row">
                        <div class="col-12">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>Este tratamiento corresponde a la cita #@Html.DisplayFor(model => model.Appointment.Id)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <h5 class="mb-3 text-primary"><i class="fas fa-cog me-2"></i>Acciones</h5>

                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Editar Tratamiento
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>