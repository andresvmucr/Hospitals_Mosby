@model ProyectoBasesDatos.Models.Medication
@{
    ViewData["Title"] = "Crear Medicamento";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="my-2"><i class="fas fa-pills me-2"></i>Crear Nuevo Medicamento</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <!-- Información del Medicamento -->
                    <div class="col-lg-6">
                        <h5 class="mb-3 text-primary"><i class="fas fa-info-circle me-2"></i>Información Básica</h5>

                        <div class="mb-3">
                            <label asp-for="Id" class="form-label">Identificación</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-fingerprint"></i></span>
                                <input asp-for="Id" class="form-control" value="@ViewData["GeneratedId"]" readonly />
                            </div>
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MName" class="form-label">Nombre del Medicamento</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-tablets"></i></span>
                                <input asp-for="MName" class="form-control" placeholder="Ingrese el nombre del medicamento" />
                            </div>
                            <span asp-validation-for="MName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MDescription" class="form-label">Descripción</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-file-alt"></i></span>
                                <textarea asp-for="MDescription" class="form-control" placeholder="Descripción del medicamento" rows="3"></textarea>
                            </div>
                            <span asp-validation-for="MDescription" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Información de Inventario -->
                    <div class="col-lg-6">
                        <h5 class="mb-3 text-primary"><i class="fas fa-box-open me-2"></i>Inventario y Precio</h5>

                        <div class="mb-3">
                            <label for="Price" class="form-label">Precio</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                <input name="Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                            </div>
                            <span class="text-danger"></span>
                            <div class="form-text">Ingrese el precio en la moneda local.</div>
                        </div>

                        <div class="mb-3">
                            <label for="Stock" class="form-label">Stock Disponible</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-boxes"></i></span>
                                <input name="Stock" class="form-control" type="number" placeholder="Cantidad disponible" />
                            </div>
                            <span class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Crear Medicamento
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}