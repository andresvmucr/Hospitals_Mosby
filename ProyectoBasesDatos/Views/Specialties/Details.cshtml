@model ProyectoBasesDatos.Models.Specialty
@{
    ViewData["Title"] = "Detalles de la Especialidad";
    var userRole = ViewContext.HttpContext.Session.GetString("Role") ?? "";

    // Obtener inicial para avatar
    string specialtyInitial = !string.IsNullOrEmpty(Model.SpeName) ? Model.SpeName.Substring(0, 1).ToUpper() : "S";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-lg">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-stethoscope me-2"></i>Detalles de la Especialidad</h4>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-light btn-sm me-2">
                    <i class="fas fa-edit me-1"></i>Editar
                </a>
                <a asp-action="Index" class="btn btn-outline-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row">
                <!-- Sección de información de la especialidad -->
                <div class="col-lg-8">
                    <div class="d-flex align-items-center mb-4">
                        <div class="user-avatar bg-success"
                             style="width: 70px; height: 70px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 24px;">
                            @specialtyInitial
                        </div>
                        <div class="ms-3">
                            <h3 class="mb-0">@Model.SpeName</h3>
                            <span class="badge bg-success">Especialidad Médica</span>
                        </div>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-12">
                            <div class="card h-100 bg-light">
                                <div class="card-body">
                                    <h5 class="card-title text-success"><i class="fas fa-info-circle me-2"></i>Información General</h5>
                                    <hr>

                                    <div class="mb-0">
                                        <strong><i class="fas fa-align-left text-muted me-2"></i>Descripción:</strong>
                                        <p class="mb-0">@(string.IsNullOrEmpty(Model.Description) ? "No disponible" : Model.Description)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sección de información del sistema -->
                <div class="col-lg-4">
                    <div class="card h-100 bg-light">
                        <div class="card-body">
                            <h5 class="card-title text-success"><i class="fas fa-cogs me-2"></i>Información del Sistema</h5>
                            <hr>

                            <div class="mb-3">
                                <strong><i class="fas fa-fingerprint text-muted me-2"></i>ID de la Especialidad:</strong>
                                <p class="mb-0">@Model.Id</p>
                            </div>

 

                            <!-- Información adicional que podría ser relevante -->
                            <div class="mb-0">
                                <strong><i class="fas fa-calendar-alt text-muted me-2"></i>Estado:</strong>
                                <p class="mb-0">
                                    <span class="badge bg-success">Activa</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>