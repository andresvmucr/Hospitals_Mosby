@model ProyectoBasesDatos.Models.Specialty
@{
    ViewData["Title"] = "Crear Especialidad";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-lg">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Crear Nueva Especialidad</h4>
            <div>
                <a asp-action="Index" class="btn btn-outline-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="card h-100 bg-light">
                            <div class="card-body">
                                <h5 class="card-title text-success"><i class="fas fa-info-circle me-2"></i>Información Básica</h5>
                                <hr>

                                <div class="mb-3">
                                    <label asp-for="Id" class="form-label fw-bold">
                                        <i class="fas fa-fingerprint text-muted me-2"></i>ID de Especialidad
                                    </label>
                                    <input asp-for="Id" class="form-control" value="@ViewData["GeneratedId"]" readonly />
                                    <span asp-validation-for="Id" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="SpeName" class="form-label fw-bold">
                                        <i class="fas fa-tag text-muted me-2"></i>Nombre de Especialidad
                                    </label>
                                    <input asp-for="SpeName" class="form-control" placeholder="Ingrese el nombre de la especialidad" />
                                    <span asp-validation-for="SpeName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card h-100 bg-light">
                            <div class="card-body">
                                <h5 class="card-title text-success"><i class="fas fa-align-left me-2"></i>Detalles</h5>
                                <hr>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label fw-bold">
                                        <i class="fas fa-file-alt text-muted me-2"></i>Descripción
                                    </label>
                                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Ingrese una descripción detallada de la especialidad"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i>Guardar Especialidad
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}